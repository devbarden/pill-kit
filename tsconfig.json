{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"noEmit": true,
		"target": "es6",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@app/*": ["src/*"],
			"@assets/*": ["assets/*"]
		}
	},
	"exclude": ["node_modules"]
}
